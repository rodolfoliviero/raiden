      <td class="done" id="story-100082-done" style="position: relative;"><!-- Done --></td>
    </tr> <!-- story-task-row-->
    <!-- nova historia -->
    <tr id="new-story-row" class="new_story_row">
      <td class="stories" id="new_story_box">
        <a href="#" id="new_story_link" observedactions="click">New story</a>
      </td>
    </tr>
  </tbody>
</table>
</div>

