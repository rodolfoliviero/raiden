<h1><%=h @project.name %></h1>

<p>Stories</p>
<div id="stories">
  <%= render :partial => @project.stories %>
</div>

<p><b>New story</b></p>

<% form_remote_for [@project, Story.new] do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :points %><br />
    <%= f.text_field :points %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<div id="form_task">
</div>

<%= link_to 'Back', projects_path %>

<div style="" id="scrumy-board-container">

<table cellspacing="0" class="live" id="scrumy-board">
  <tbody id="scrumy-board-body">
    <tr id="scrumy-board-header" style="position: relative;">
        <th class="story-handle" id="story-header">
            <span>Stories</span>
        </th>
        <th id="todo-header">
            <span>To Do</span><a style="display: none;" class="select-all" href="#">Select All</a>
        </th>
        <th id="inprogress-header">
            <span>In Progress</span><a style="display: none;" class="select-all" href="#">Select All</a>
        </th>
        <th id="done-header">
            <span>Done</span>
        </th>
    </tr>
    <tr class="story-task-row" id="story_100082" style="position: relative;">
      <td class="stories" id="story-100082-title">
        <div class="story" id="story_editor_100082">
        <div class="story-handle">
          <span class="title">
            Historia 1
          </span>
        </div>
        <a class="delete-story" href="" observedactions="click">Delete</a>
        </div>
      </td>
      <td class="plus">
        <div class="plus-button">
          <a href="#" observedactions="click"><img src="/images/plus.gif"/></a>
        </div>
      </td>
      <td class="todo" id="story-100082-todo" style="position: relative;"><!-- To Do -->
      <!-- inicio task -->
        <div id="task_276182" class="task white">
          <div class="handle"> </div>
          <div class="title">
            <pre class="title_inner">tarefa 1</pre>
          </div>
          <a class="delete-task" href="" observedactions="click">Delete</a>
